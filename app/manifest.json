{
  "manifest_version": 2,
  "name": "Canywhere",
  "version": "0.0.2",
  
  "description": "Copy @ Anywhere!",
  "icons": { "128": "i/icon128.png" },

  "browser_action": {
    "default_icon": {
      "19": "i/icon19.png",
      "38": "i/icon38.png"
    },
    "default_title": "CAnywhere",
    "default_popup": "popup.html"
  },
  
  "background": {
    "scripts": [
      "js/jquery.min.js",
      "socket.io.js",
      "moment.min.js",
      "event.js"
    ],
    "persistent": false
  },
  "permissions": [
    "notifications",
    "contextMenus",
    "clipboardWrite"
  ]
}